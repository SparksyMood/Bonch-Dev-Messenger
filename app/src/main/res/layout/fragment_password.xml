<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.PasswordFragment">

    <FrameLayout
        android:id="@+id/fragment_pass"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:background="@drawable/buttonshape"
        />

    <EditText
        android:id="@+id/old_password_edit_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Старый пароль"
        android:layout_above="@id/new_password_edit_text"
        android:layout_centerInParent="true"/>

    <EditText
        android:id="@+id/new_password_edit_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Новый пароль"
        android:layout_centerInParent="true"/>

    <EditText
        android:id="@+id/confirm_password_edit_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Подтвердите пароль"
        android:layout_below="@id/new_password_edit_text"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/change_password_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Подтверждаю"
        android:layout_centerInParent="true"
        android:layout_below="@id/confirm_password_edit_text"
        android:layout_marginBottom="5dp"
        android:background="@drawable/buttonshape"/>


</RelativeLayout>