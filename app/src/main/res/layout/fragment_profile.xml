<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/man"
    tools:context=".ui.fragments.ProfileFragment">

    <FrameLayout
        android:id="@+id/fragment_pro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="450dp"
        android:layout_centerInParent="true"
        android:background="#000000"/>

    <ImageView
        android:id="@+id/avatar_image_view"
        android:background="@drawable/ava"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        />

    <EditText
        android:id="@+id/name_edit_text"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Anastasiia"
        android:layout_centerInParent="true"
        android:layout_below="@id/avatar_image_view"
        android:layout_marginTop="25dp"/>


    <TextView
        android:id="@+id/email_text_view"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="chebykina99@mail.ru"
        android:layout_centerInParent="true"
        android:layout_below="@id/name_edit_text"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/email_confirm_button"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Подтвердить почту"
        android:layout_centerInParent="true"
        android:layout_below="@id/email_text_view"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/buttonshape"/>

    <Button
        android:id="@+id/change_password_button"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Поменять пароль"
        android:layout_centerInParent="true"
        android:layout_below="@id/email_confirm_button"
        android:layout_marginBottom="5dp"
        android:background="@drawable/buttonshape"/>

    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Выйти"
        android:layout_centerInParent="true"
        android:layout_below="@id/change_password_button"
        android:background="@drawable/buttonshape"/>



</RelativeLayout>